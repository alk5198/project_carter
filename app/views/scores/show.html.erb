<div class="page-header">
  <h3>Score #<%= @score.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @score.user.present? %>
          <a href="/users/<%= @score.user_id %>">
            <%= @score.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Poster score</dt>
      <dd><%= @score.poster_score %></dd>

      <dt>Rater score</dt>
      <dd><%= @score.rater_score %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/scores" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @score.user %>
        <a href="/scores/<%= @score.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_score/<%= @score.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
