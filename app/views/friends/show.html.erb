<div class="page-header">
  <h3>Friend #<%= @friend.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Receiver</dt>
      <dd><%= @friend.receiver_id %></dd>

      <dt>Sender</dt>
      <dd><%= @friend.sender_id %></dd>

      <dt>Message</dt>
      <dd><%= @friend.message %></dd>

      <dt>Status</dt>
      <dd><%= @friend.status %></dd>

      <dt>Relationship</dt>
      <dd><%= @friend.relationship %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/friends" class="btn btn-primary">
        Back
      </a>
      <a href="/friends/<%= @friend.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_friend/<%= @friend.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
